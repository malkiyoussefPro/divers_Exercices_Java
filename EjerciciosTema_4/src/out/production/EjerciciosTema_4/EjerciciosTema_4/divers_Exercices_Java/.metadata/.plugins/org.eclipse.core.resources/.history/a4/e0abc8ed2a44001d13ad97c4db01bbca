package Ejercicios_Tema_3;

public class CalculQuadrat {

	public static void main(String[] args) {
		
		// Declaracion de los Variables
		int costat,perimtro,area;
		
		//Asignar valores a los variables
		costat=9;
		perimtro=costat*4;
		area=costat*2;
		
		//Mostrar el resultado del perimetro y ela area del cuadrado
		System.out.println("- El perimetro del cuadrado es:"+perimtro+ " m²");
		System.out.println("- El area del cuadrado es:"+area+ " m²");
		

	}

}
