				System.out.print("- Ingresa la segunda nota:");
				nota2=  arrayEstudiantes[i][j]=scan.nextInt();
				System.out.println("- La segunda nota es: "+nota2);
				
			    System.out.print("- Ingresa la tercera nota:");
				nota3=  arrayEstudiantes[i][j]=scan.nextInt();
				System.out.println("- La tercera nota es: "+nota3);
			    
				double notaMedia;
				notaMedia=(nota1+nota2+nota3)/3;
				notaMedia=arrayEstudiantes[i][j];
				System.out.println("- La nota media del estudiante es: "+arrayEstudiantes[i][j]+notaMedia);
				
			}
			
		}
