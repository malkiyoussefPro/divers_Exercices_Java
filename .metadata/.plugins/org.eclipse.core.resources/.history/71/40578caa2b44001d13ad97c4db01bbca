package Ejercicios_Tema_3;

public class CalculRectangle {

	public static void main(String[] args) {
		// Declaracion de los Variables
		int costaGran=8;
		int costaPetit=3;
		//Asignar valores a los variables
	
		int perimtro=costaGran*costaPetit;
		int area=(costaGran*2)+(costaPetit*2);
		
		//Mostrar el resultado del perimetro y ela area del rectangulo
		System.out.println("- El perimetro del rectangulo es:"+perimtro+ " m");
		System.out.println("- El area del rectangulo es:"+area+ " m");

	}

}
